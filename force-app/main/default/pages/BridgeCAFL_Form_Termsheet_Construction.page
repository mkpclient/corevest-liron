<apex:page standardController="Opportunity" extensions="TermSheetPDF_Controller" contentType="application/x-unknown" cache="true">

    <html xmlns:o='urn:schemas-microsoft-com:office:office' xmlns:w='urn:schemas-microsoft-com:office:word' xmlns='<a target="_blank" href="http://www.w3.org/TR/REC-html40" rel="nofollow">http://www.w3.org/TR/REC-html40</a>'>

    <head>
        <style type="text/css">
            p.MsoHeader,
            li.MsoHeader,
            div.MsoHeader {
                margin: 0in;
                margin-top: .0001pt;
                mso-pagination: widow-orphan;
                tab-stops: center 3.0in right 6.0in;

            }

            @page Section1 {
                size: 8.5in 11.0in;
                /* margin:0.5in 0.5in 0.5in 0.5in; */
                margin: .5in 1in 1in 1in;
                mso-header-margin: 0.5in;
                mso-header: h1;
                mso-footer: f1;
                mso-footer-margin: 0.5in;
                mso-paper-source: 0;
            }

            .lineClose {
                text-align: center;
            }

            div.Section1 {
                page: Section1;
            }

            /*Below is the style to prevent the repetition of header and Footer.. Cheers!!! */

            table#hrdftrtbl {
                margin: 0in 0in 0in 9in;
            }

            @page {
                @bottom-right {
                    content: element(footer);
                }
            }

            div.header {
                /* text-align: left; */
                /* background: url("{! $Resource.corevestLogo }") no-repeat; */
                /* width: 320px;
                height: 68px; */
                /* margin top: 2in; */
                padding: 10px;
                position: running(header);
                display: block;
            }

            .pagenumber:before {
                content: counter(page);
            }

            .pagecount:before {
                content: counter(pages);
            }

            .pagebreak {
                page-break-before: always;
            }

            div.footer {
                display: block;
                padding: 5px;
                position: running(footer);
                text-align: center;
                font-family: Times;
            }

            div.spinitials {
                display: block;
                padding: 5px;
                position: running(footer);
                text-align: right;
                font-family: Times;
            }

            .pagenumber:before {
                content: counter(page);
            }

            .pagecount:before {
                content: counter(pages);
            }

            .avoid-pagebreak {
                page-break-inside: avoid;
            }

            .paragraph-title {
                text-align: center;
                font-family: Times;
                font-size: 11pt;
                font-weight: bold;
                text-decoration: underline;
            }

            .paragraph {
                font-family: Times;
                font-size: 11pt;
                line-height: 1.3;
                text-align: justify;
                text-indent: 40px;
            }

            .row-title {
                font-family: Times;
                font-size: 11pt;
                width: 10%;
                font-weight: bold;
                vertical-align: top;
                padding: 2px 6px;
                margin-bottom: 25px;
                border: solid 2px #ffffff;
            }

            .row-description {
                font-family: Times;
                font-size: 11pt;
                width: 90%;
                padding: 2px 6px;
                vertical-align: top;
                margin-bottom: 25px;
                border: solid 2px #ffffff;
            }


            .limitor-list {
                list-style-type: none;
            }

            .sigsection {
                page-break-inside: avoid;
            }

            .signing-section {
                text-decoration: underline;
                color: white;
                border-bottom-style: solid;
                border-bottom-width: 1px;
                border-color: black;
            }

            .mark {
                background-color: yellow;
                color: black;
                }
        </style>
    </head>

    <body>
        <div class="Section1">
            <div class="header">
                <div>
                    <apex:image url="https://cvest.my.salesforce.com/servlet/servlet.ImageServer?id=0150a000001fqte&oid=00Dj0000000L4sC" />
                </div>
            </div>
            <div class="footer">
                <div></div>
            </div>
        </div>
        <div class="content">
            <p style="font-family: Times; font-size: 11pt; line-height: 1.3;  page-break-inside:avoid;">
                <!-- <apex:outputText value="{!TEXT(MONTH(Opportunity.Term_Sheet_Issued__c)) & '/' & TEXT(DAY(Opportunity.Term_Sheet_Issued__c)) & '/' & TEXT(YEAR(Opportunity.Term_Sheet_Issued__c))}" /> -->
                <apex:outputText value=" {0,date, MMMM d',' yyyy}">
                    <apex:param value="{! DATE(todayYear, todayMonth, todayDay)}" /></apex:outputText>
            </p>
            <p style="font-family: Times; font-size: 11pt; line-height: 1.3;  page-break-inside:avoid;">

                <apex:outputField value="{!Opportunity.Account.BillingStreet}" />
                <br />
                <apex:outputText value="{!Opportunity.Account.BillingCity}, " />
                <apex:outputText value="{!Opportunity.Account.Billing_State_Code__c} " rendered="{!NOT (ISBLANK(Opportunity.Account.BillingState))}"
                />
                <apex:outputText value="{!Opportunity.Account.BillingPostalCode}" />
                <br />

                <span style="{!IF(NOT(Opportunity.Account.BillingCountry == 'United States'), 'page-break-inside:avoid;', 'display:none;')}">
                    <apex:outputText value="{!Opportunity.Account.BillingCountry}" rendered="{!NOT(Opportunity.Account.BillingCountry == 'United States')}"
                    />
                    <br />
                </span>
                <apex:outputText value="{!'Attention: ' & Opportunity.Primary_Contact__c } " /> ("
                <strong>Sponsor</strong>")  
            </p>
            <p style="{!IF(Opportunity.Project_Strategy__c = 'Build to Rent', 'page-break-inside:avoid;', 'display:none;')}">
                <span style="font-family: Times; font-size: 11pt; line-height: 1.3;  page-break-inside:avoid;">
                    <strong>[USE FOR SINGLE FAMILY/TOWNHOME PROJECTS]</strong>
                    <apex:outputText value=" ${0,number} Construction Loan Proposal to finance the the acquisition/refinancing and construction of [XXX] Residential Units, defined below, each on a subdivided residential lot located {1}">
                        <apex:param value="{!Opportunity.Loan_Size__c}" />
                        <apex:param value="{!IF(Opportunity.Number_of_Properties__c != null && Opportunity.Number_of_Properties__c > 1, 'in ' + allProperties[0].City__c + ', ' + allProperties[0].State__c, 'at ' + allProperties[0].Name + ' ' + allProperties[0].City__c + ', ' + allProperties[0].State__c)}"
                        />
                    </apex:outputText> (the
                    <strong>"Property"</strong>)
                </span>
            </p>
            <p style="{!IF(Opportunity.Project_Strategy__c = 'Multifamily GUC', 'page-break-inside:avoid;', 'display:none;')}">
                <span style="font-family: Times; font-size: 11pt; line-height: 1.3;  page-break-inside:avoid;">
                    <strong>[USE FOR MULTIFAMILY PROJECTS]</strong>
                    <apex:outputText value=" ${0,number} Construction Loan Proposal to finance the acquisition/refinancing and construction of a multifamily apartment project to be comprised of [XXX] Residential Units defined below located {1}">
                        <apex:param value="{!Opportunity.Loan_Size__c}" />
                        <apex:param value="{!IF(Opportunity.Number_of_Properties__c != null && Opportunity.Number_of_Properties__c > 1, 'in ' + allProperties[0].City__c + ', ' + allProperties[0].State__c, 'at ' + allProperties[0].Name + ' ' + allProperties[0].City__c + ', ' + allProperties[0].State__c)}"
                        />
                    </apex:outputText>
                </span>
            </p>

            <p style="font-family: Times; font-size: 11pt; line-height: 1.3;  page-break-inside:avoid;">
                <apex:outputText value="{! 'Dear ' & Opportunity.Contact__r.FirstName}" />:
            </p>

            <p class="paragraph">
                CoreVest American Finance Lender LLC or an affiliated entity ("
                <strong>Lender"</strong>) is pleased to present this summary proposal to provide a secured construction loan to finance
                the acquisition/refinancing of the Property (exclusive of any to-be demolished existing improvements) and
                Eligible Project Costs (defined below) for the vertical construction of the Residential Units. As further
                set forth below, this proposal is for discussion purposes only and is neither an expressed nor implied commitment
                to provide any financing or to provide or purchase any loans or securities in connection with the transactions
                contemplated hereby.
            </p>

            <table style="table-layout: fixed; width:95vw;" cellspacing="0">
                <colgroup>
                    <col class="short" />
                    <col class="long" />
                </colgroup>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Borrower:
                    </td>
                    <td class="row-description">
                        A bankruptcy-remote, single-purpose limited liability company (LLC) acceptable to Lender. The LLC will include
                        <apex:outputText value="{!Opportunity.Contact__r.Name}" /> (
                        <strong>"Sponsor"</strong>) or an affiliate of Sponsor approved by Lender as an equity owner and as managing
                        member or manager. Lender reserves the right to approve any other equity owners and/or managers in
                        the LLC prior to closing, and no transfers, pledges or assignments of direct or indirect equity interests
                        shall be permitted except as noted in the below Section entitled "No Transfers". If an equity pledge
                        is required, Borrower must be a single member Delaware limited liability company, with the form of
                        the LLC Agreement in form and substance acceptable to Lender and its counsel.
                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Guarantor:
                    </td>
                    <td class="row-description">
                        The undersigned "Sponsor" and/or such individuals or entities acceptable to Lender following due diligence.
                    </td>

                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Pledgor:
                    </td>
                    <td class="row-description">
                        A bankruptcy remote, Delaware limited liability company, acceptable to Lender following due diligence, which shall be the
                        sole member of Borrower.
                        <span class="mark">[REPLACE WITH "NOT REQUIRED" IF NO EQUITY PLEDGE]</span>
                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Net Worth and Liquidity Requirement:
                    </td>
                    <td class="row-description">
                        Prior to Loan closing the Guarantor(s) shall evidence, on a combined basis if more than one Guarantor, a minimum net worth
                        of 100% of the Maximum Loan Amount and minimum aggregate liquidity of 10% of the Maximum Loan Amount
                        based on readily marketable securities and bank accounts within the United States of America. Following
                        Loan closing these requirements must be maintained at all times and shall be tested quarterly based
                        on unaudited compiled financial statements with supporting current bank/brokerage account statements.
                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Property:
                    </td>
                    <td class="row-description">
                        <p>[XXX] acres of unimproved land comprised of
                            <span class="mark">[XXX]</span> legally subdivided residential lot(s) (each a
                            <strong>"Residential Lot"</strong>) each of which is a Finished Lot(s) located at the address set forth
                            above to be improved with
                            <span class="mark">[XXX]</span> residential dwelling units (each a
                            <strong>"Residential Unit"</strong> and collectively, together with any related improvements included
                            in the Final Plans
                            <strong>
                                <span class="mark">[**List any specific improvements such as a clubhouse, parking garage, pool and other amenities],
                                    the "Improvements"). The Improvements shall include [**list Project type (e.g. single
                                    family homes/townhomes, multifamily apartment building(s) and square footage and unit
                                    mix # of 1 bed, 2 bed 3, bed etc.]</span>
                            </strong> (unit mix may change prior to Loan closing) pursuant to Final Plans, Construction Documents (defined
                            below) and a construction budget, detailing by line item total eligible project costs, as approved
                            by Lender prior to the closing of the Loan, and otherwise in accordance with the terms and conditions
                            to be set forth in the loan documents (as approved by Lender, the
                            <strong>"Budget"</strong>). Borrower's preliminary proposed budget submitted to Lender for review and
                            approval during the due diligence period is attached hereto as
                            <strong>
                                <u>Exhibit B.</u>
                            </strong> No Property may at any time be occupied by Borrower, Guarantor or any interest owner, or affiliate
                            or relative thereof.
                            <strong>[TO BE CONFIRMED PROPERTY AND IF APPLICABLE, THE RESIDENTIAL LOTS, ARE SUBDIVIDED AND NO HORIZONTAL
                                OR OFF-SITE IMPROVEMENTS]</strong>
                        </p>
                        <p>
                            <strong>"Finished Lot"</strong> means the Property, and if applicable, each Residential Lot, is a separate
                            legal parcel and if multiple Residential Lots, all of such Residential Lots are contiguous, excepting
                            any existing public roads, (b) all off-site construction and infrastructure necessary to permit
                            construction of the Improvements on the Property and issuance of permanent certificates of occupancy
                            upon Completion has been completed in accordance with all legal requirements, (c) all utilities
                            have been installed and are available to the Property, and each Residential Lot located with
                            the Property, and (d) building permits may be issued and construction commenced upon payment
                            of the building permit fees and otherwise without satisfaction of any further material conditions.</p>

                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Loan Purpose:
                    </td>
                    <td class="row-description">
                        Refinancing or acquisition of the Property and financing of a portion of the Eligible Project Costs for construction of the
                        Improvements and payment of interest on the Loan as described below.
                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Closing:
                    </td>
                    <td class="row-description">
                        Anticipated to be 45 days from the execution of this Loan Proposal (provided timely delivery of Due Diligence).
                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Maximum Loan Amount/ Advances:
                    </td>
                    <td class="row-description">
                        <p>Maximum Loan Amount of
                            <span class="mark">
                                <apex:outputText value=" ${0,number} ">
                                    <apex:param value="{!Opportunity.Loan_Size__c}" /></apex:outputText>
                            </span>, subject to confirmation and determined by Lender as follows: the Maximum Loan Amount will be
                            the lesser of: (a)
                            <apex:outputText value="{0,number,0}%">
                                <apex:param value="{!Opportunity.Requested_LTV_Max__c}" /></apex:outputText> of the "As-Stabilized" market value of the Property as determined by Lender
                            based on an appraisal of the Property prepared by an appraiser selected by Lender and in form
                            and scope acceptable to Lender (
                            <strong>"As-Stabilized Value"</strong>) and (b)
                            <apex:outputText value="{0,number,0}%">
                                <apex:param value="{!Opportunity.Requested_LTC_Max__c}" /></apex:outputText> of an amount equal to (i) the Third Party Purchase Price paid for the
                            Property as determined by Lender plus (ii) the total project costs necessary to achieve Completion
                            of the Improvements on the Property in the amount to be set forth in the Budget less any such
                            project costs that may have been incurred and paid for by Borrower prior to Loan closing to the
                            extent verified as such by Lender in the amount set forth in the Budget which may be either credited
                            to Borrower's [Initial] Equity Contribution or reimbursed to Borrower as part of the Initial
                            Advance (discussed below) plus (iii) the Interest Allocation discussed below, in the amount set
                            forth in the Budget (the project costs described in clauses (b)(ii) and (iii) above are collectively
                            referred to as the,
                            <strong>"Eligible Project Costs"</strong>) and as more fully described in the loan documents. As used
                            herein,
                            <strong>"Third Party Purchase Price"</strong> means the purchase price paid by Borrower or an affiliate
                            of Borrower or Sponsor for the Property to a third party seller who is not related to or affiliated
                            with Borrower or Sponsor pursuant to a written purchase and sale agreement. </p>
                        <p>The initial advance to be disbursed on the Closing Date for financing the acquisition or refinancing
                            of the Property which may include reimbursement of any project costs incurred and paid for in
                            full by Borrower prior to Loan closing to the extent such paid project costs are verified as
                            such by Lender prior to Loan closing and have not been credited to Borrower's [Initial] Equity
                            Contribution (the
                            <strong>"Initial Advance"</strong>) is anticipated to be the lesser of (a) [
                            <span class="mark">XXX</span>]% of the Third Party Purchase Price paid for the Property and (b)[
                            <span class="mark">XXX</span>]% of the "As-Is" appraised value as determined by Lender based on the appraisal of
                            the Property prepared by an appraiser selected by Lender and in form and scope acceptable to
                            Lender (
                            <strong>"As-Is Value"</strong>). The remaining portion of the Maximum Loan Amount (the
                            <strong>"Construction Loan Proceeds"</strong>) will be advanced in multiple advances (each an "Advance")
                            to pay for Eligible Project Costs per the Budget. As used herein,
                            <strong>"Construction Advance"</strong> means an Advance to pay for Eligible Project Costs other than
                            Advances from the Interest Allocation to pay interest on the Loan. The Construction Loan Proceeds
                            are estimated to be $[
                            <span class="mark">XXX</span>] subject to confirmation by Lender. See
                            <strong>Exhibit A</strong> - "Sources and Uses.</p>

                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Borrower Equity Contribution:
                    </td>
                    <td class="row-description">
                        <p>[USE IF NO ADDITIONAL EQUITY] an estimated [$
                            <span class="mark">XXX</span>] of invested equity capital, inclusive of cash and land equity, to be evidenced at
                            Loan closing (
                            <strong> "Borrower's Equity Contribution" </strong>), subject to confirmation as determined by Lender
                            prior to Loan Closing that the Construction Loan Proceeds are not less than Eligible Project
                            Costs.]
                        </p>
                        <p>[USE IF ADDITIONAL EQUITY REQUIRED] an estimated $[
                            <span class="mark">XXX</span>] of invested equity capital, inclusive of cash and land equity, to be evidenced at
                            Loan closing (
                            <strong> "Borrower's Initial Equity Contribution" </strong>) at Loan Closing, subject to Lender confirmation
                            prior to Loan Closing.</p>
                        <p>Following Loan Closing, an additional estimated $[
                            <span class="mark">XXX</span>] of equity capital to be fully invested by Borrower towards Eligible Project Costs
                            prior to and as a condition to the disbursement of any Construction Advance under the Loan (
                            <strong>"Borrower's Additional Equity Contribution"</strong>), subject to confirmation as determined
                            by Lender prior to Loan Closing that the Construction Loan Proceeds plus Borrower's Additional
                            Equity Contribution are not less than Eligible Project Costs. Before any further Construction
                            Advance is made, Borrower shall be required to provide evidence to Lender that it has paid (from
                            sources other than Advances) Eligible Project Costs in an amount equal to Borrower's Additional
                            Equity Contribution. Evidence that Borrower's Additional Equity Contribution shall be by way
                            of submitting to Lender a Draw Package (defined below). The outside date for Borrower to fully
                            invest Borrower's Additional Equity Contribution to be determined by Lender during the due diligence
                            period and prior to Loan Closing.</p>

                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Loan Term:
                    </td>
                    <td class="row-description">
                        [
                        <span class="mark"><apex:outputText value="{0,number}"><apex:param value="{!numTermLoanMonths}" /></apex:outputText></span>] months [
                        <span class="mark">INSERT IF EXTENSION OPTION</span> "Initial Stated Maturity Date"]
                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Extension Option:
                    </td>
                    <td class="row-description">

                        <span style="{!IF(Opportunity.LOC_Extension__c = '6 months, 50bps', 'page-break-inside:avoid;', 'display:none;')}">
                            1 six (6) month extension option subject to extension requirements below.
                        </span>
                        <span style="{!IF(Opportunity.LOC_Extension__c = 'None' , 'page-break-inside:avoid;', 'display:none;')}">
                            None
                        </span>
                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Interest Rate:
                    </td>
                    <td class="row-description">
                        <p>The Loan will bear interest at a floating rate per annum equal to Term SOFR plus 
                            <apex:outputText value=" {0,number,0}%">
                                <apex:param value="{!Opportunity.Requested_Index_Margin__c}" /></apex:outputText> (
                            <strong>"Interest Rate"</strong>), adjusted monthly and provided Term SOFR shall not be less than the
                            Floor. Interest will be paid monthly in arrears on the tenth day of each calendar month for accrued
                            interest for the preceding calendar month (each an
                            <strong>"Interest Accrual Period"</strong>"). Interest will be calculated based on a 360-day year and
                            the actual number of days elapsed (Actual/360) and will accrue on any unpaid principal balance.
                            As used herein, the following terms shall have the meanings set forth below:</p>
                        <p>
                            <strong> "Floor" </strong> means 
                            <apex:outputText value=" {0, number, 0.00}%"><apex:param value="{! Opportunity.Floor__c }" /></apex:outputText> per annum.</p>
                        <p>
                            <strong>"Interest Adjustment Date"</strong> means, for the initial Interest Accrual Period, the date
                            that is two U.S. Government Securities Business Days prior to the first day of the calendar month
                            in which the Closing Date occurs, and for any subsequent Interest Accrual Period, the date that
                            is two U.S. Government Securities Business Days prior to the first day of such Interest Accrual
                            Period.
                        </p>
                        <p>
                            <strong> "SOFR" </strong> means a rate equal to the secured overnight financing rate as administered by
                            the Federal Reserve Bank of New York (or a successor administrator of the secured overnight financing
                            rate).
                        </p>
                        <p>
                            <strong> "Term SOFR" </strong> means, for any Interest Accrual Period, the rate per annum equal to the
                            forward-looking term rate based on SOFR for a one-month tenor as of the Interest Adjustment Date,
                            as published by the CME Group Benchmark Administration Limited (or a successor administrator
                            of such rate), as determined by Lender; provided that if as of 5:00 p.m. U.S. Central Time on
                            the Interest Adjustment Date Term SOFR has not been published, then Term SOFR shall mean such
                            rate as of the first U.S. Government Securities Business Day preceding the Interest Adjustment
                            Date for which a Term SOFR was published so long as such first preceding U.S. Government Securities
                            Business Day is not more than three U.S. Government Securities Business Days prior to the Interest
                            Adjustment Date. </p>
                        <p>
                            <strong> "U.S. Government Securities Business Day" </strong> means any day except for (i) a Saturday,
                            (ii) a Sunday or (iii) a day on which the Securities Industry and Financial Markets Association
                            recommends that the fixed income departments of its members be closed for the entire day for
                            purposes of trading in United States government securities.</p>

                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Amortization:
                    </td>
                    <td class="row-description">
                        Interest Only
                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Origination Fee:
                    </td>
                    <td class="row-description">
                        <apex:outputText value="{0,number,0}%">
                            <apex:param value="{!Opportunity.Requested_Origination_Fee__c}" /> </apex:outputText> of the Maximum Loan Amount payable at Closing, which fee shall be fully earned
                        and non-refundable to Borrower.
                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Construction Monitoring Fee:
                    </td>
                    <td class="row-description">
                        $[
                        <span class="mark">1,000</span>] per Construction Advance payable to Lender as a condition to each Construction Advance.
                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Exit Fee:
                    </td>
                    <td class="row-description">
                        if requested fee is not zero <span class="mark">[USE IF NO PARTIAL RELEASES]</span>
                        <apex:outputText value="{!Opportunity.Requested_Exit_Fee__c}" /> of the Maximum Loan Amount, which shall be due and payable in full upon the earlier of (a) the maturity
                        date of the Loan, and (b) the date the Loan is repaid in full, provided that the Exit Fee will be
                        waived if the Loan is repaid in full with a permanent term loan from Lender or Lender's affiliate.]<span class="mark">[or
                        replace with NONE if no Exit Fee]</span>

                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Property Exit Fee:
                    </td>
                    <td class="row-description">
                        <p>[USE IF PARTIAL RELEASES][
                            <span class="mark">XXX</span>]% of 1/[
                            <span class="mark">total number of Residential Units</span>] of the Maximum Loan Amount for each Residential Unit
                            (as may be adjusted by Lender during Lender's due diligence based on the Residential Unit composition
                            (e.g., unit size and type), per Release Property appraised value or other pertinent factors as
                            determined by Lender), which shall be due and payable in full upon the earlier of (a) the maturity
                            date of the Loan, (b) the date the Loan is repaid in full, or (c) or in connection with the release
                            of a Release Property and satisfaction of the Property Release conditions for such Release Property,
                            provided that the Property Exit Fee will be waived for any Release Property that is refinanced
                            with a permanent term loan from Lender or Lender's affiliate.] </p>
                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Extension Fee:
                    </td>
                    <td class="row-description">
                        <apex:outputText value="{!Opportunity.Extension_Fee__c}" /> of the <span class="mark">[USE IF NO PARTIAL RELEASES]Maximum Loan Amount. [USE IF PARTIAL RELEASES] outstanding principal
                        balance of the Loan on the Initial Stated Maturity Date.]</span>

                    </td>
                </tr>

                <tr style="page-break-inside:avoid;">
                    <td class="row-title">
                        Extension Option Requirements:


                            <apex:outputText value="${0, number,###,###,###,##0.00}">
                                <apex:param value="{!record.Proceeds_Paid_To_Escrow__c}"/>
                            </apex:outputText>
                            
                        </td>
                    </tr>
                    
                    <tr>
                        <td colspan="2" style="padding-top:20px;">
                        </td>
                        <td style="padding-top:20px;">
                            Tax
                            
                        </td>
                        <td style="padding-top:20px;">
                            <apex:outputText value="${0, number,###,##0.00}">
                                <apex:param value="{!record.Total_Reserve_Tax__c}"/>
                            </apex:outputText>
                            
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                        </td>
                        <td>
                            Insurance

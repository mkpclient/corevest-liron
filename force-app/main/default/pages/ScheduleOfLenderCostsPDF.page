                            <apex:outputText value="${0, number,###,###,###,##0.00}" rendered="{!IF(record.Lender_Credit__c!=null && record.Lender_Credit__c>0,true,false)}">
                                <apex:param value="{!record.Lender_Credit__c}"/>
                            </apex:outputText>
                            
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="padding-bottom:20px;">
                        </td>
                        <td style="border-top: 1pt solid black;padding-bottom:20px;">
                            <b>Total Lender</b>
                        </td>
                        <td style="border-top: 1pt solid black;padding-bottom:20px;">
                            <apex:outputText value="${0, number,###,###,###,##0.00}">
                                <apex:param value="{!record.Total_Lender__c}"/>
                            </apex:outputText> 
                        </td>
                    </tr>
                    
                    <tr >
                        <td colspan="2">
                        </td>
                        <td style="border: 1pt solid black;">
                            <b>CoreVest Proceeds Paid to Escrow</b>
                        </td>

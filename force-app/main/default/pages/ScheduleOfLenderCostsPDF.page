                        </td>
                        <td>
                            <apex:outputText value="${0, number,###,###,###,##0.00}" rendered="{!IF(record.Bridge_Payoff__c!=null && record.Bridge_Payoff__c>0,true,false)}">
                                <apex:param value="{!record.Bridge_Payoff__c}"/>
                            </apex:outputText> 

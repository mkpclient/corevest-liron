                        <td colspan="2">
                        </td>
                        <td>
                             
                            
                        </td>
                        <td >
                            
                            
                        </td>
                    </tr>
                    <apex:repeat value="{!loanFees}" var="loanFee" >
                        <tr style="{!IF(loanFee.Vendor_Type__c == 'Servicer', 'display: none', '')}">

<apex:page standardController="Checklist_Section__c" applyBodyTag="false" renderAs="pdf" extensions="ChecklistPDFController">
  <head>
    <style type="text/css">
      @page {
        @top-center {
          content: element(header);
        }
        @bottom-center {
          content: element(footer);
        }
        margin: 0.9in;
        margin-top: 1.25in;
      }

      .header {
        text-align: left;
        background: url("{! $Resource.corevestLogo }") no-repeat;
        width: 320px;
        height: 68px;
        /* margin top: 2in; */
        padding: 10px;
        position: running(header);
      }

      div.footer {
        display: block;
        padding: 5px;
        position: running(footer);
        text-align: center;
        font-family: Times;
      }

      .pagenumber:before {
        content: counter(page);
      }

      .pagecount:before {
        content: counter(pages);
      }

      .pagebreak {
        page-break-before: always;
      }

      .signing-section {
        text-decoration: underline;
        color: white;
        border-bottom-style: solid;
        border-bottom-width: 1px;
        border-color: black;
      }

      .definition-title {
        vertical-align: top;
        font-family: Times;
        font-size: 10pt;
        font-weight: bold;
        line-height: 1.3;
        padding: 5px 6px;
        width: 25%;
      }

      .definition {
        font-family: Times;
        font-size: 10pt;
        line-height: 1.3;
        text-align: justify;
        vertical-align: top;
        padding: 5px 6px;
      }

      .sub-definition-title {
        vertical-align: top;
        font-family: Times;
        font-size: 10pt;
        line-height: 1.3;
        padding: 5px 6px;
        width:25%;
        text-decoration:underline;
      }

      .sub-definition {
        font-family: Times;
        font-size: 10pt;
        line-height: 1.3;
        text-align: justify;
        vertical-align: top;
        padding: 5px 6px;
      }

      .row-title {
        font-family: Times;
        font-size: 10pt;
        padding: 2px 6px;
        vertical-align: top;
        width: 25%;
        font-weight: bold;
        border-right: solid 1px #bebebe;
        border-bottom: solid 1px #bebebe;
        border-top: solid 1px #bebebe;
        border-left: solid 1px #bebebe;
      }

      .row-description {
        font-family: Times;
        font-size: 10pt;
        padding: 2px 6px;
        vertical-align: top;
        width: 75%;
        border-right: solid 1px #bebebe;
        border-bottom: solid 1px #bebebe;
        border-top: solid 1px #bebebe;
        border-left: solid 1px #bebebe;
      }

      .hidden {
        display:none;
      }

    </style>
  </head>

  <div class="footer">
    <!--<div>Page
<span class="pagenumber" /> of
<span class="pagecount" />
</div>-->
    <table style="width: 100%">
      <tr>
        <td
          style="
            width: 30%;

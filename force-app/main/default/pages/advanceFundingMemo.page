<apex:page standardController="Advance__c" applyBodyTag="false" renderAs="pdf" extensions="AdvanceFundingMemoController">

  <head>
    <style type="text/css">
      @page {
        margin: 0.5in;
      }

      html {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 10pt;
      }

      th {
        background-color: #003366;
        color: #fff;
        font-weight: bold;
      }

      td,
      th {
        padding: 1px 3px;
      }

      table {
        border: 1px solid #003366;
        border-spacing: 0;
        table-layout: fixed;
      }

      .bgCol {
        background-color: #DDEBF7;
      }


      .rightAlign {
        text-align: right;
      }

      .valueColumn {
        text-align: right;
        overflow-wrap: normal;
      }
    </style>
  </head>
    <apex:image url="{!$Resource.corevestLogo}" width="250" height="50" style="margin-top: 10px; float:left;margin-left: 150px; padding-bottom: 10px;" />
  <div>
    <div style="float:left; width: 53%;">
      <table>
        <colgroup>
          <col style="width:40%" />
          <col style="width:10%" />
          <col style="width:40%" />
        </colgroup>
        <thead>
          <tr>
            <th colspan="3">Deal Information</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="bgCol">Loan #</td>
            <td class="bgCol"></td>
            <td class="valueColumn">{!Advance__c.Loan_Number__c}</td>
          </tr>
          <tr>
            <td class="bgCol">Borrower</td>
            <td class="bgCol"></td>
            <td class="valueColumn">{!Advance__c.Borrower_Name_Text__c}</td>
          </tr>
          <tr>
            <td class="bgCol">Originator</td>
            <td class="bgCol"></td>
            <td class="valueColumn">{!Advance__c.Deal__r.Owner.Name}</td>
          </tr>
          <tr>
            <td class="bgCol">Asset Underwriter</td>
            <td class="bgCol"></td>
            <td class="valueColumn">{!Advance__c.Underwriter__r.Name}</td>
          </tr>
          <tr>
            <td class="bgCol">LOC Size</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!Advance__c.LOC_Commitment__c != null}" value="${0, Number}">
                <apex:param value="{!ROUND(Advance__c.LOC_Commitment__c, 0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.LOC_Commitment__c == null}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">Close Date</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText value="{0, date, MM/dd/yyyy}">
                <apex:param value="{!Advance__c.Close_Date__c}" />
              </apex:outputText>
            </td>
          </tr>
          <tr>
            <td class="bgCol">Approved States</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              {!Advance__c.Deal__r.Active_States__c}
            </td>
          </tr>
          <tr>
            <td class="bgCol">Advance #</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              {!Advance__c.Name}
            </td>
          </tr>
          <tr>
            <td class="bgCol">Current LOC UPB</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!Advance__c.Current_UPB__c != null}" value="${0, Number}">
                <apex:param value="{!ROUND(Advance__c.Current_UPB__c,0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Current_UPB__c == null}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">Bridge Exposure</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!Advance__c.Deal__r.Account.Borrowed_on_Bridge_Loans__c != null}" value="${0, Number}">
                <apex:param value="{!ROUND(Advance__c.Deal__r.Account.Borrowed_on_Bridge_Loans__c,0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Deal__r.Account.Borrowed_on_Bridge_Loans__c == null}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">Term Exposure</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!Advance__c.Deal__r.Account.Borrowed_on_Term_Loans__c != null}" value="${0, Number}">
                <apex:param value="{!ROUND(Advance__c.Deal__r.Account.Borrowed_on_Term_Loans__c,0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Deal__r.Account.Borrowed_on_Term_Loans__c == null}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">Line of Credit Expiration Date</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText value="{0, date, MM/dd/yyyy}">
                <apex:param value="{!Advance__c.Deal__r.Expiration_Date__c}" />
              </apex:outputText>
            </td>
          </tr>
        </tbody>
      </table>
      <br />
      <table>
        <colgroup>
          <col style="width:39%" />
          <col style="width:11%" />
          <col style="width:39%" />
        </colgroup>
        <thead>
          <tr>
            <th>Deal Metrics</th>
            <th>Max</th>
            <th class="rightAlign">Subject Draw</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="bgCol">Initial Loan LTC</td>
            <td class="bgCol">
              <apex:outputText rendered="{!Advance__c.Deal__r.LTC__c != null}" value="{0, Number}%">
                <apex:param value="{!ROUND(Advance__c.Deal__r.LTC__c, 0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Deal__r.LTC__c == null}" value="N/A" />
            </td>
            <td class="valueColumn">
              <apex:outputText rendered="{!AND(Advance__c.Approved_Advance_Amount_Total__c != null, Advance__c.Purchase_Price_Total__c != null)}" value="{0, Number}%">
                <apex:param value="{!ROUND((Advance__c.Approved_Advance_Amount_Total__c / Advance__c.Purchase_Price_Total__c) * 100, 0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!OR(Advance__c.Approved_Advance_Amount_Total__c == null, Advance__c.Purchase_Price_Total__c == null)}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">Initial Loan LTV</td>
            <td class="bgCol">
              <apex:outputText rendered="{!Advance__c.Deal__r.LTV__c != null}" value="{0, Number}%">
                <apex:param value="{!ROUND(Advance__c.Deal__r.LTV__c,0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Deal__r.LTV__c == null}" value="N/A" />
            </td>
            <td class="valueColumn">
              <apex:outputText rendered="{!AND(Advance__c.Initial_Disbursement_Total__c != null, Advance__c.BPO_Appraisal_Value_Total__c != null)}" value="{0, Number}%">
                <apex:param value="{!ROUND((Advance__c.Initial_Disbursement_Total__c / Advance__c.BPO_Appraisal_Value_Total__c) * 100,0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!OR(Advance__c.Initial_Disbursement_Total__c == null, Advance__c.BPO_Appraisal_Value_Total__c == null)}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">Renovation Advances</td>
            <td class="bgCol">
              {!Advance__c.Deal__r.Renovation_Funding__c}
            </td>
            <td class="valueColumn">
              N/A
            </td>
          </tr>
          <tr>
            <td class="bgCol">Max Total LTC</td>
            <td class="bgCol">
              <apex:outputText rendered="{!Advance__c.Deal__r.Total_Loan_LTC__c != null}" value="{0, Number}%">
                <apex:param value="{!ROUND(Advance__c.Deal__r.Total_Loan_LTC__c, 0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Deal__r.Total_Loan_LTC__c == null}" value="N/A" />
            </td>
            <td class="valueColumn">
              <apex:outputText rendered="{!Advance__c.Total_LTC_Total__c != null}" value="{0, Number}%">
                <apex:param value="{!ROUND(Advance__c.Total_LTC_Total__c, 0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Total_LTC_Total__c == null}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">ARLTV</td>
            <td class="bgCol">
              <apex:outputText rendered="{!Advance__c.Deal__r.Total_ARV_LTV__c != null}" value="{0, Number}%">
                <apex:param value="{!ROUND(Advance__c.Deal__r.Total_ARV_LTV__c,0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Deal__r.Total_ARV_LTV__c == null}" value="N/A" />
            </td>
            <td class="valueColumn">
              <apex:outputText rendered="{!Advance__c.ARV_LTV_Total__c != null}" value="{0, Number}%">
                <apex:param value="{!ROUND(Advance__c.ARV_LTV_Total__c,0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.ARV_LTV_Total__c == null}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">% of Renovation Budget</td>
            <td class="bgCol">
              <apex:outputText rendered="{!Advance__c.Deal__r.Max_Reno_Cost_Reimbursement__c != null}" value="{0, Number}%">
                <apex:param value="{!ROUND(Advance__c.Deal__r.Max_Reno_Cost_Reimbursement__c,0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Deal__r.Max_Reno_Cost_Reimbursement__c == null}" value="N/A" />
            </td>
            <td class="valueColumn">
              <apex:outputText rendered="{!propertyDetails.rehabBudgetPct != null}" value="{0, Number}%">
                <apex:param value="{!ROUND(propertyDetails.rehabBudgetPct,0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!propertyDetails.rehabBudgetPct == null}" value="N/A" />
            </td>
          </tr>
        </tbody>
      </table>
      <br />
      <table>
        <colgroup>
          <col style="width:40%" />
          <col style="width:10%" />
          <col style="width:40%" />
        </colgroup>
        <thead>
          <tr>
            <th colspan="3">Takeout Metrics</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="bgCol">Actual DSCR</td>
            <td class="bgCol"></td>
            <td class="valueColumn">{!actualDscr}</td>
          </tr>
          <tr>
            <td class="bgCol">Actual LTV</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!actualLtv != null}" value="{0, Number}%">
                <apex:param value="{!ROUND(actualLtv,0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!actualLtv == null}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">Actual Debt Yield</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!actualDebtYield != null}"  value="{0, Number}%">
                <apex:param value="{!ROUND(actualDebtYield,0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!actualDebtYield == null}" value="N/A" />
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <!-- supposed two cols -->
    <div style="float:right; width: 46%;">
      <table>
        <colgroup>
          <col style="width:40%" />
          <col style="width:10%" />
          <col style="width:40%" />
        </colgroup>
        <thead>
          <tr>
            <th colspan="3">Loan Sizing</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="bgCol">Initial Advance</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!Advance__c.Initial_Disbursement_Total__c != null}" value="${0, Number}">
                <apex:param value="{!ROUND(Advance__c.Initial_Disbursement_Total__c, 0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Initial_Disbursement_Total__c == null}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">Renovation Advance</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!Advance__c.Approved_Renovation_Amount_Total__c != null}" value="${0, Number}">
                <apex:param value="{!ROUND(Advance__c.Approved_Renovation_Amount_Total__c, 0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Approved_Renovation_Amount_Total__c == null}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">
              <strong>Total Amount</strong>
            </td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <strong>
                <apex:outputText rendered="{!AND(Advance__c.Approved_Renovation_Amount_Total__c != null, Advance__c.Initial_Disbursement_Total__c != null)}" value="${0, Number}">
                  <apex:param value="{!ROUND(Advance__c.Approved_Renovation_Amount_Total__c + Advance__c.Initial_Disbursement_Total__c, 0)}" />
                </apex:outputText>
                <apex:outputText rendered="{!OR(Advance__c.Approved_Renovation_Amount_Total__c == null, Advance__c.Initial_Disbursement_Total__c == null)}" value="N/A" />
              </strong>
            </td>
          </tr>
        </tbody>
      </table>
      <br />
      <table>
        <colgroup>
          <col style="width:40%" />
          <col style="width:10%" />
          <col style="width:40%" />
        </colgroup>
        <thead>
          <tr>
            <th colspan="3">Property Details</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="bgCol">Transaction Type</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              {!propertyDetails.transactionType}
            </td>
          </tr>
          <tr>
            <td class="bgCol">Acquisition Date</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText value="{0, date, MM/dd/yyyy}">
                <apex:param value="{!propertyDetails.acquisitionDate}" />
              </apex:outputText>
            </td>
          </tr>
          <tr>
            <td class="bgCol">Property Type(s)</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              {!propertyDetails.propertyType}
            </td>
          </tr>
          <tr>
            <td class="bgCol">Property Count</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText value="{0, Number}">
                <apex:param value="{!propertyDetails.propertyCount}" />
              </apex:outputText>
            </td>
          </tr>
          <tr>
            <td class="bgCol">Unit Count</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText value="{0, Number}">
                <apex:param value="{!propertyDetails.unitCount}" />
              </apex:outputText>
            </td>
          </tr>
          <tr>
            <td class="bgCol">Occupancy </td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText value="{0, Number}%">
                <apex:param value="{!ROUND(propertyDetails.occupancy, 0)}" />
              </apex:outputText>
            </td>
          </tr>
          <tr>
            <td class="bgCol">Avg. Year Built </td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText value="{0, Number, ###0}">
                <apex:param value="{!propertyDetails.avgYearBuilt}" />
              </apex:outputText>
            </td>
          </tr>
          <tr>
            <td class="bgCol">Appraisal Date (Avg.)</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText value="{0, date, MM/dd/yyyy}">
                <apex:param value="{!propertyDetails.appraisalDate}" />
              </apex:outputText>
            </td>
          </tr>
        </tbody>
      </table>
      <br />
      <table>
        <colgroup>
          <col style="width:40%" />
          <col style="width:10%" />
          <col style="width:40%" />
        </colgroup>
        <thead>
          <tr>
            <th colspan="3">Advance Metrics</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="bgCol">Requested Funding Date</td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText value="{0, date, MM/dd/yyyy}">
                <apex:param value="{!Advance__c.Target_Advance_Date__c}" />
              </apex:outputText>
            </td>
          </tr>
          <tr>
            <td class="bgCol">
              <strong>Acquisition Price</strong>
            </td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <strong>
                <apex:outputText rendered="{!Advance__c.Purchase_Price_Total__c != null}" value="${0, Number}">
                  <apex:param value="{!ROUND(Advance__c.Purchase_Price_Total__c, 0)}" />
                </apex:outputText>
                <apex:outputText rendered="{!Advance__c.Purchase_Price_Total__c == null}" value="N/A" />
              </strong>
            </td>
          </tr>
          <tr>
            <td class="bgCol">
              Avg. Price Per Property
            </td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!AND(Advance__c.Purchase_Price_Total__c != null, propertyDetails.propertyCount != null)}" value="${0, Number}">
                <apex:param value="{!ROUND(Advance__c.Purchase_Price_Total__c / propertyDetails.propertyCount, 0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!OR(Advance__c.Purchase_Price_Total__c == null, propertyDetails.propertyCount == null)}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">
              <strong>Current Market Value</strong>
            </td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <strong>
                <apex:outputText rendered="{!Advance__c.BPO_Appraisal_Value_Total__c != null}" value="${0, Number}">
                  <apex:param value="{!ROUND(Advance__c.BPO_Appraisal_Value_Total__c, 0)}" />
                </apex:outputText>
                <apex:outputText rendered="{!Advance__c.BPO_Appraisal_Value_Total__c == null}" value="N/A" />
              </strong>
            </td>
          </tr>
          <tr>
            <td class="bgCol">
              Avg. Value Per Property
            </td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!AND(Advance__c.BPO_Appraisal_Value_Total__c != null, propertyDetails.propertyCount != null)}" value="${0, Number}">
                <apex:param value="{!ROUND(Advance__c.BPO_Appraisal_Value_Total__c / propertyDetails.propertyCount, 0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!OR(Advance__c.BPO_Appraisal_Value_Total__c == null, propertyDetails.propertyCount == null)}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">
              Renovation Budget
            </td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!Advance__c.Renovation_Budget_Total__c != null}" value="${0, Number}">
                <apex:param value="{!ROUND(Advance__c.Renovation_Budget_Total__c, 0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Renovation_Budget_Total__c == null}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">
              After Renovated Value (ARV)
            </td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!Advance__c.After_Repair_Value_Total__c != null}" value="${0, Number}">
                <apex:param value="{!ROUND(Advance__c.After_Repair_Value_Total__c, 0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.After_Repair_Value_Total__c == null}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">
              Actual Rent Per Unit Per Month
            </td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!Advance__c.Deal__r.Average_Rent_Per_Unit__c != null}" value="${0, Number}">
                <apex:param value="{!ROUND(Advance__c.Deal__r.Average_Rent_Per_Unit__c, 0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!Advance__c.Deal__r.Average_Rent_Per_Unit__c == null}" value="N/A" />
            </td>
          </tr>
          <tr>
            <td class="bgCol">
              Proforma Rent Per Unit Per Month
            </td>
            <td class="bgCol"></td>
            <td class="valueColumn">
              <apex:outputText rendered="{!proformaRent != null}"  value="${0, Number}">
                <apex:param value="{!ROUND(proformaRent,0)}" />
              </apex:outputText>
              <apex:outputText rendered="{!proformaRent == null}"  value="N/A" />
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    
    <div style="float:left;">
      <br />
      <table>
        <colgroup>
          <col style="width:100%" />
        </colgroup>
        <thead>
          <tr>
            <th colspan="2">Advance Details</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="bgCol">{!Advance__c.Advance_Details__c}</td>
          </tr>
        </tbody>
      </table>
      <br />
      <table>
        <colgroup>
          <col style="width:100%" />
        </colgroup>
        <thead>
          <tr>
            <th colspan="2">Exit Strategy</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td class="bgCol">{!Advance__c.Exit_Strategy__c}</td>
          </tr>

        </tbody>
      </table>
    </div>
  </div>
</apex:page>
                mso-header-margin: 0.5in;
                mso-header: h1;
                mso-footer: f1;
                mso-footer-margin: 0.5in;
                mso-paper-source: 0;
            }

            div.Section1 {
                page: Section1;
            }

            /*Below is the style to prevent the repetition of header and Footer.. Cheers!!! */

            table#hrdftrtbl {
                margin: 0in 0in 0in 9in;
            }

            @page {
                @bottom-right {
                    content: element(footer);
                }
            }

            div.header {
                /* text-align: left; */
                /* background: url("{! $Resource.corevestLogo }") no-repeat; */
                /* width: 320px;
                height: 68px; */
                /* margin top: 2in; */
                padding: 10px;
                position: running(header);
                display: block;
            }

            .pagenumber:before {
                content: counter(page);
            }

            .pagecount:before {
                content: counter(pages);
            }

            .pagebreak {
                page-break-before: always;
            }

            div.footer {
                display: block;
                padding: 5px;
                position: running(footer);
                text-align: center;
                font-family: Times;
            }

            div.spinitials {
                display: block;
                padding: 5px;
                position: running(footer);
                text-align: right;
                font-family: Times;
            }

            .pagenumber:before {
                content: counter(page);
            }

            .pagecount:before {
                content: counter(pages);
            }

            .avoid-pagebreak {
                page-break-inside: avoid;
            }

            .paragraph-title {
                text-align: center;
                font-family: Times;
                font-size: 11pt;
                font-weight: bold;
                text-decoration: underline;
            }

            .paragraph {
                font-family: Times;
                font-size: 10pt;
                line-height: 1.3;
                text-align: justify;
                text-indent: 40px;
            }

            .row-title {
                font-family: Times;
                font-size: 10pt;
                width: 30%;
                font-weight: bold;
                vertical-align: top;
                padding: 2px 6px;
                border: solid 1px #BEBEBE;
            }

            .row-description {
                font-family: Times;
                font-size: 10pt;
                width: 70%;
                padding: 2px 6px;
                vertical-align: top;
                border: solid 1px #BEBEBE;
            }

            .limitor-list {
                list-style-type: none;
            }

            .sigsection {
                page-break-inside: avoid;
            }

            .signing-section {
                text-decoration: underline;
                color: white;
                border-bottom-style: solid;
                border-bottom-width: 1px;
                border-color: black;
            }
        </style>
    </head>


    <body>
        <div class="Section1">

<aura:component
  controller="AdvanceFundingMemoController"
  implements="force:appHostable,flexipage:availableForAllPageTypes,force:lightningQuickAction,force:hasRecordId,forceCommunity:availableForAllPageTypes"
  access="global"
>
  <aura:attribute name="details" type="Object" />
  <aura:attribute name="recordId" type="String" />

  <aura:handler Name="init" value="{!this}" action="{!c.init}" />

  <div class="slds slds-container-center">
    <h3
      class="slds-section-title--divider slds-m-top--x-small slds-m-bottom--x-small"
    >
      <span>Advance Funding Memo</span>
    </h3>
    <lightning:layout multipleRows="true">
      <lightning:layoutItem padding="around-small" size="6">
        <div>
          <lightning:input
            aura:id="actualDscr"
            label="Actual DSCR"
            value="{!v.details.actualDscr}"
            pattern="\d+(\.\d+)?x$"
            messageWhenPatternMismatch="Please enter the Actual DSCR in the following format: 1.23x. Decimals are optional."
          />
        </div>
      </lightning:layoutItem>
      <lightning:layoutItem padding="around-small" size="6">
        <div>
          <lightning:input
            aura:id="actualLtv"
            label="Actual LTV"
            type="number"
            formatter="percent-fixed"
            step="0.01"
            value="{!v.details.actualLtv}"
          />
        </div>
      </lightning:layoutItem>
      <lightning:layoutItem padding="around-small" size="6">
        <div>
          <lightning:input
            aura:id="actualDebtYield"
            label="Actual Debt Yield"
            type="number"
            formatter="percent-fixed"
            step="0.01"
            value="{!v.details.actualDebtYield}"
          />
        </div>
      </lightning:layoutItem>
      <lightning:layoutItem padding="around-small" size="6">
        <div>
          <lightning:input
            aura:id="proformaRent"
            label="Proforma Rent Per Unit Per Month"
            type="number"
            formatter="currency"
            step="0.01"
            value="{!v.details.proformaRent}"
          />
        </div>
      </lightning:layoutItem>
      <lightning:layoutItem
        padding="around-large"
        size="12"
        class="slds-m-top-small slds-text-align-center"
      >
        <lightning:button
          variant="brand"
          label="Download File"
          onclick="{!c.generate}"
        />
        <lightning:button
          variant="brand"
          label="Cancel"
          onclick="{!c.cancel}"
        />
      </lightning:layoutItem>
    </lightning:layout>
  </div>
  {!v.body}
</aura:component>
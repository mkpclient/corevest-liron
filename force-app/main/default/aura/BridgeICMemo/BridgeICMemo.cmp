      <lightning:layoutItem
        padding="around-large"
        size="12"
        class="slds-m-top--small slds-text-align--center"
      >
        <lightning:button
          variant="brand"
          label="Print"
          onclick="{!c.saveAndPrint}"
        />
        <lightning:button
          variant="brand"
          label="Cancel"
          onclick="{!c.cancel}"
        />
      </lightning:layoutItem>
    </lightning:layout>
  </div>
  {!v.body}
</aura:component>
<aura:component
  controller="BridgeICMemoController"
  implements="force:appHostable,flexipage:availableForAllPageTypes,force:lightningQuickAction,force:hasRecordId,forceCommunity:availableForAllPageTypes"
  access="global"
>
  <aura:attribute name="recordId" type="String" />
  <aura:attribute
    name="componentHeader"
    type="String"
    default="Bridge IC Memo"
  />
  <aura:attribute
    name="Deal"
    type="Opportunity"
    default="{'sobjectType':'Opportunity'}"
  />
  <aura:attribute name="unsavedObj" type="object" />
  <aura:handler Name="init" value="{!this}" action="{!c.init}" />
  <!--<aura:attribute name="Deal" type="SObject"/> -->

  <aura:attribute name="iframeBaseURL" type="String" />
  <!-- Print iFrame -->
  <iframe
    style="
      height: 0;
      width: 0;
      position: absolute;
      z-index: -99999;
      visibility: hidden;
    "
    height="100%"
    id="vfFrame"
    aura:id="vfFrame"
  ></iframe>
  <!-- Print iFrame -->
  <div class="slds slds-container--center">
    <!--section 1-->
    <h3
      class="slds-section-title--divider slds-m-top--x-small slds-m-bottom--x-small"
    >
      <span>{!v.componentHeader}</span>
    </h3>
    <lightning:layout multipleRows="true">
      <aura:if isTrue="{!v.Deal.RecordType__c != 'Single Asset Bridge'}">
        <lightning:layoutItem padding="around-small" size="6">
          <div>
            <lightning:input
              aura:id="annualincomeyear"
              label="Annual Income Year"
              value="{!v.unsavedObj.annualincomeyear}"
            />
          </div>
        </lightning:layoutItem>
        <lightning:layoutItem padding="around-small" size="6">
          <div>
            <lightning:input
              aura:id="annualincome"
              label="Annual Income"
              value="{!v.unsavedObj.annualincome}"
            />
          </div>
        </lightning:layoutItem>
      </aura:if>
      <!-- <lightning:layoutItem padding="around-small" size="6">
                <div>
                    <lightning:input aura:id="repeatborrower" label="Repeat Borrower" value="{!v.unsavedObj.repeatborrower}"/>
                </div>
            </lightning:layoutItem>
            <lightning:layoutItem padding="around-small" size="6">
                <div>
                    <lightning:input aura:id="fundedborrower" label="Funded Amount" value="{!v.unsavedObj.fundedborrower}"/>
                </div>
            </lightning:layoutItem>  -->
      <lightning:layoutItem padding="around-small" size="6">
        <div>
          <lightning:input
            aura:id="deliquencyhistory"
            label="Delinquency History"
            value="{!v.unsavedObj.deliquencyhistory}"
          />
        </div>
      </lightning:layoutItem>
      <aura:if isTrue="{!v.Deal.RecordType__c == 'Single Asset Bridge'}">
        <lightning:layoutItem padding="around-small" size="12">
          <div>
            <lightning:textarea
              aura:id="comments"
              value="{!v.unsavedObj.comments}"
              placeholder="Type your comments"
              label="Comments"
            />
          </div>
        </lightning:layoutItem>
      </aura:if>

      <!-- <lightning:layoutItem padding="around-small" size="6">
                <div>
                    <lightning:input aura:id="recourse" label="Recourse" value="{!v.unsavedObj.recourse}"/>
                </div>
            </lightning:layoutItem> -->

<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <submitter>CAF_Analysts</submitter>
        <type>group</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>bryon.harland@cvest.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approved by UW</label>
        <name>Approved_by_UW</name>
    </approvalStep>
    <description>Approval process for submitting a SAB Deal into Underwriting</description>
    <emailTemplate>Submit_to_UW_Approval_Email_Templates/Bridge_Deal_Submitted_for_UW_Approval</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <booleanFilter>(1 OR 4) AND 2 AND 3</booleanFilter>
        <criteriaItems>
            <field>Opportunity.Record_Type_Name__c</field>
            <operation>equals</operation>
            <value>LOC Loan</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Term_Sheet_Signed__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.StageName</field>
            <operation>equals</operation>
            <value>Term Sheet Signed/Deposit Collected</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.RecordType</field>
            <operation>equals</operation>
            <value>Bridge Loan</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Current_Approval_Process_NULL</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Deal_has_been_approved_and_submitted_to_UW</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Deal_has_been_approved_into_UW</name>
            <type>Alert</type>
        </action>
        <action>
            <name>StageName_to_Loan_Processing</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Date_Stage_Changed_to_UW</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Bridge_Deal_has_been_rejected_by_UW</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Current_Approval_Process_NULL</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Remove_Submission_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Stage_to_TS_Signed</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>A_Deal_has_been_submitted_for_approval_into_UW</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Check_Awaiting_Kickoff_Call</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Current_Approval_Process_Entry_into_UW</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Stage_to_Submitted_to_UW</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Submission_Date</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Submit SAB Deal to UW Approval</label>
    <processOrder>18</processOrder>
    <recallActions>
        <action>
            <name>Current_Approval_Process_NULL</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Remove_Submission_Date</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Stage_to_TS_Signed</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
